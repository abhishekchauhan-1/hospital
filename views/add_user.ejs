<!----Header-->
<%- include('layout/header')%>
<!----Header-->

<!---Main Section---->
<main id="site-main">
  <div class="container">
    <div class="box-nav">
      <div class="filter">
        <a href="/"><i class="fa-solid fa-left-long"></i>All Users</a>
      </div>
    </div>

    <div class="form-title text-centre">
      <h2 class="text-dark">New User</h2>
      <span class="text-light">Use the below form to create new account</span>
    </div>
    <!----Form -->
    <form action="/api/users" method="post" id="add_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <!-- <input type="hidden" name="id" value="" /> -->
          <input type="text" name="name" value="" placeholder="Vijay Verma" />
        </div>

        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input
            type="email"
            name="email"
            value=""
            placeholder="example@gmail.com"
          />
        </div>

        <div class="form-group">
          <label for="gender" class="text-light">Gender</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="Male" />
            <label for="radio-2" class="text-light">Male</label>
          </div>

          <div class="radio inline">
            <input type="radio" id="radio-3" name="gender" value="Female" />
            <label for="radio-3" class="text-light">Female</label>
          </div>
        </div>

        <div class="form-group">
          <label for="status" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" />
            <label for="radio-4" class="text-light">Active</label>
          </div>

          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" />
            <label for="radio-5" class="text-light">Inactive</label>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
    <!----Form -->
  </div>
</main>
<!---Main Section---->

<!----Footer-->
<%- include('layout/footer')%>
<!----Footer-->
